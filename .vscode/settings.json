{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.associations": {
    "console-extensions.json": "jsonc"
  },
  "json.schemas": [
    {
      "fileMatch": ["console-extensions.json"],
      "url": "node_modules/@openshift-console/dynamic-plugin-sdk/schema/console-extensions.json"
    }
  ],
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.formatOnSave": true
  }
}
